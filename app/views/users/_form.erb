<form action='/users' method='post'>
  <div class="form-group row">
    <label for="user[name]" class="control-label col-md-2 col-md-offset-1">Your Name</label>
    <div class="col-md-6">
      <input class="form-control" type="text" name="user[full_name]" placeholder="John Smith">
    </div>
  </div>
  <div class="form-group row">
    <label for="user[email]" class="control-label col-md-2 col-md-offset-1">Email</label>
    <div class="col-md-6">
      <input class="form-control" type='text' name='user[email]' placeholder="name@domain.com"/>
    </div>
  </div>
  <div class="form-group row">
    <label for="user[password]" class="control-label col-md-2 col-md-offset-1">Password</label>
    <div class="col-md-6">
      <input class="form-control" type='password' name='password' placeholder="password"/>
    </div>
  </div>
  <div class="form-group row">
    <label for="user[profile_picture]" class="control-label col-md-2 col-md-offset-1">Profile Picture URL</label>
    <div class="col-md-6">
      <input class="form-control" type='text' name='user[profile_picture]' placeholder="http://www.google.com/squirrel_pic.jpg"/>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-md-9 col-md-offset-3">
      <button type="submit" class="btn btn-primary">Create my account</button>
      <button type="reset" class="btn btn-default">Cancel</button>
    </div>
  </div>
</form>